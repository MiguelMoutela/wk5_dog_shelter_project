  <label class="switch">
    Healthy:
    <input type="checkbox" name="healthy">
  </label>

  <label class="switch">
    Trained:
    <input type="checkbox" name="trained">
  </label>

  <label class="switch">
    Adoptable:
    <input type="checkbox" name="adoptable">
  </label>

  <input type="submit" value="Search" />

</form>Â 


