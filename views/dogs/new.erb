<div class="container">
  <div class="panel">
    <div class="panel-header">
      <h2>Add Bowwow</h2>
    </div>

    <form action="/bowwows" method="post">

      <div class="field">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name"/>
      </div>

      <div class="field">
        <label for="city">City:</label>
        <input type="text" name="city" id="city"/>
      </div>

      <div class="field">
        <label for="breed">Breed:</label>
        <input type="text" name="breed" id="breed"/>
      </div>

      <label for="date-field">Admission Date:</label>
        <input type="date" name="admission_date" id="date-field" />

      <input type='submit' value='Add Bowwow' class="btn btn-green btn-block"/>
    </form>
  </div>
</div>
