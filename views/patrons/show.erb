<h1>Patrons</h1>
<div class = 'container'>
  <div class = 'table_header'>
    <table>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Bio</th>
      </tr>
    </div>
    <div class = 'table_content'>
      <tr>
        <td><%= @patron.name %></td>
        <td><%= @patron.address %></td>
        <td><%= @patron.email %></td>
        <td><%= @patron.phone %></td>
        <td><%= @patron.bio %></td>
      </tr>
    </div>
  </table>
</div>

<form action='/patrons/<%= @patron.id %>/delete' method='post'>
  <input type='submit' value='Delete' class="btn btn-green btn-block"/>
</form>

<a href='/patrons/<%= @patron.id %>/dogs'>See Dogs</a>

<a href="/patrons/<%= @patron.id %>/update">Update<a>
